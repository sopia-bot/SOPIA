{
	"name": "sopia-v3",
	"version": "0.6.1",
	"description": "A Spooncast manager A.I Program",
	"private": true,
	"scripts": {
		"app:build": "npm run build -workspace=@sopia-bot/app",
		"app:dev": "npm run dev -workspace=@sopia-bot/app",
		"bundle:build": "npm run build -workspace=@sopia-bot/bundles",
		"core:build": "tsc -b -v packages/core",
		"core:publish": "npm run core:build && npm publish -workspace=@sopia-bot/core",
		"view:build": "npm run build -workspace=@sopia-bot/view",
		"view:serve": "npm run serve -workspace=@sopia-bot/view",
		"view:publish": "npm run s3:publish -workspace=@sopia-bot/view"
	},
	"main": "background.js",
	"dependencies": {
	},
	"devDependencies": {
		"@types/node": "^17.0.21",
		"copy": "^0.3.2",
		"copyfiles": "^2.4.1",
		"mocha": "^6.2.1",
		"rimraf": "^3.0.2",
		"ts-node": "^8.4.1",
		"tslib": "^2.3.0",
		"tslint": "^6.1.3",
		"typescript": "~4.3.2"
	},
	"workspaces": [
		"packages/app",
		"packages/bundles",
		"packages/core",
		"packages/view",
		"tools/upload-view"
	]
}
