{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"noImplicitAny": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./types",
		"pretty": true,
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "es2017",
	},
	"include": [ "." ],
	"exclude": ["node_modules", "dist"]
}
