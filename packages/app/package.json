{
	"name": "@sopia-bot/app",
	"version": "0.6.2",
	"description": "A Spooncast manager A.I Program",
	"scripts": {
		"icon-build": "electron-icon-builder --input=public/icon.png --output=.build --flatten",
		"tsc": "tsc --project . && cp ../context-bridge/dist/preload.js .build/",
		"dev": "cross-env NODE_ENV=development nodemon --watch src --watch public --watch package.json --watch tsconfig --verbose --ext 'ts,json' --delay 1 --exec \"npm run tsc && electron .build/background.js\"",
		"publish": "node ../../tools/upload-app/index.js ."
	},
	"electronVersion": "17.4.11",
	"main": ".build/background.js",
	"dependencies": {
		"@arkiv/zip": "^1.2.0",
		"@sopia-bot/archive": "file:../archive",
		"axios": "^0.19.2",
		"cfg-lite": "^1.1.3",
		"electron-devtools-installer": "^3.1.0",
		"electron-log": "^4.4.6",
		"electron-updater": "^4.6.5",
		"mime-types": "^2.1.35",
		"npkgi": "^1.0.7",
		"puppeteer-core": "^13.4.0",
		"rimraf": "^3.0.2",
		"tslib": "^2.3.0",
		"uuid": "^8.3.0"
	},
	"devDependencies": {
		"@electron/typescript-definitions": "^8.10.0",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/mime-types": "^2.1.1",
		"@types/node": "^17.0.21",
		"@types/uuid": "^8.0.0",
		"cross-env": "^7.0.3",
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0",
		"electron-icon-builder": "^2.0.1",
		"nodemon": "^2.0.20",
		"typescript": "~4.3.2"
	}
}
